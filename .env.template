# =========================================================================
# SHOPIFY ROYALTY MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# =========================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# -------------------------------------------------------------------------
# SHOPIFY API CONFIGURATION
# -------------------------------------------------------------------------
# Get these from your Shopify Admin -> Apps -> Private apps
SHOPIFY_STORE_NAME=your-store-name
SHOPIFY_API_VERSION=2023-10
SHOPIFY_ACCESS_TOKEN=your-private-app-access-token

# -------------------------------------------------------------------------
# DATABASE CONFIGURATION  
# -------------------------------------------------------------------------
# PostgreSQL database credentials
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=shopify_royalty
POSTGRES_USER=shopify_user
POSTGRES_PASSWORD=your-secure-database-password

# -------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -------------------------------------------------------------------------
# Generate a strong 32-character encryption key
ENCRYPTION_KEY=your-32-byte-encryption-key-here
WEBHOOK_SECRET=your-webhook-secret-key

# -------------------------------------------------------------------------
# EMAIL NOTIFICATIONS (OPTIONAL)
# -------------------------------------------------------------------------
# SMTP configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_RECIPIENTS=admin@yourcompany.com,manager@yourcompany.com

# -------------------------------------------------------------------------
# CLOUD STORAGE (OPTIONAL)
# -------------------------------------------------------------------------
# For automatic report uploads
CLOUD_STORAGE_PATH=your-cloud-path/reports/

# -------------------------------------------------------------------------
# COMPANY CONFIGURATION
# -------------------------------------------------------------------------
# Your company/vendor information
COMPANY_NAME=Your Company Name
VENDOR_NAME=your-vendor-name

# -------------------------------------------------------------------------
# APPLICATION SETTINGS
# -------------------------------------------------------------------------
# System configuration
LOG_LEVEL=INFO
BACKUP_RETENTION_DAYS=90
REPORT_TIMEZONE=Europe/Oslo

# -------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -------------------------------------------------------------------------
# Set to 'development' for testing, 'production' for live environment
ENVIRONMENT=development
DEBUG=false